rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{id} {
      allow read: if true;
      allow write: if false;
    }
    function hasRole(r) { return request.auth != null && request.auth.token.role == r; }
    function canManageContent() { return request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.role == 'editor'); }
    match /inventory/{id} { allow read: if request.auth != null; allow write: if canManageContent(); }
    match /todos/{id} { allow read: if request.auth != null; allow write: if canManageContent(); }
    match /projects/{id} { allow read: if request.auth != null; allow write: if canManageContent(); }
    match /employees/{id} { allow read, write: if hasRole('admin'); }
  }
}
