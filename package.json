{
  "name": "broadwaycorp",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "emulators": "firebase emulators:start --only firestore,auth,storage --project demo-broadway",
    "prepare": "husky && husky install",
    "seed": "tsx scripts/seed-emulators.ts"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-tabs": "^1.0.4",
    "critters": "^0.0.22",
    "firebase": "^10.12.4",
    "firebase-admin": "^12.5.0",
    "framer-motion": "^11.0.0",
    "next": "^15.0.0",
    "next-intl": "^3.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.2.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.5.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.1",
    "playwright": "^1.45.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.7",
    "tsx": "^4.20.4",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "**/*.{md,css,json}": [
      "prettier --write"
    ]
  }
}
